# Docker Compose Environment Variables
# Copy this file to .env.docker and update values as needed

# Redis Configuration
REDIS_PASSWORD=redis_password_change_me
REDIS_PORT=6379
REDIS_HOST=redis

# Meilisearch Configuration
MEILI_MASTER_KEY=meilisearch_key_change_me
MEILI_ENV=production
MEILI_PORT=7700
MEILI_HOST=meilisearch
MEILI_NO_ANALYTICS=true

# Redis Commander Configuration
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_HOST=redis-commander

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_HOST=nginx

# Application Environment
APP_ENV=development
APP_DEBUG=false
APP_NAME=site_saraiva
