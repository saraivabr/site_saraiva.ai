# Production Environment Variables for Scalingo Deployment

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Build Configuration
NPM_CONFIG_PRODUCTION=false
YARN_PRODUCTION=false

# Vite Build Configuration
VITE_API_URL=https://your-domain.com/api
VITE_APP_NAME=Vite React App

# Database Configuration (if using Scalingo PostgreSQL addon)
DATABASE_URL=postgresql://user:password@host:port/database

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Security Headers
ENABLE_CORS=false
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info

# Cache Configuration
CACHE_CONTROL=public, max-age=3600, s-maxage=86400

# Optional: Custom Features
ENABLE_ANALYTICS=true
ANALYTICS_TOKEN=your-analytics-token

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=
VITE_SENTRY_ENV=production
